<div class="col-lg-12 col-md-12 col-sm-12">
    <h3 class="box-title mt-5">Comment1111</h3>
    <div class="table-responsive">
        <table class="table table-striped table-product">
            <tbody>
                <%= form_for [@product, @comment], url: product_comments_path(@product) do |f| %>
                <%= f.hidden_field :user_id, value: current_user.id %> 
                <%= f.hidden_field :product_id, value: @product.id %>
                <%= f.label :comment_content %>
                <%= f.text_area :comment_content, class: 'form-control' %>
                <%= f.submit "Save comment", class: 'btn btn-primary' %>
                <% end %>
            </tbody>
        </table>
    </div>
</div>